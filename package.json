{
  "name": "dustyui",
  "version": "1.0.1",
  "description": "A minimalist, neutral-toned React UI component library styled with CSS Modules.",
  "keywords": [
    "react",
    "ui",
    "design-system",
    "component-library",
    "css-modules",
    "dustyui"
  ],
  "author": "Wioletta Gluza <wiolagluza@gmail.com> (https://wiola.dev)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/w-gluza/dustyui"
  },
  "homepage": "https://dustyui.com",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist && tsup && tsc -p tsconfig.build.json && cpy \"src/**/*.css\" dist --parents",
    "typecheck": "tsc --noEmit",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "eslint .",
    "lint:css": "stylelint 'src/**/*.css'"
  },
  "sideEffects": [
    "**/*.css"
  ],
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "cpy-cli": "^6.0.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-config-turbo": "^2.5.4",
    "eslint-plugin-react": "^7.37.5",
    "prettier": "^3.6.2",
    "stylelint": "^16.21.1",
    "stylelint-config-css-modules": "^4.5.1",
    "stylelint-config-standard": "^38.0.0",
    "tsup": "^7.0.0",
    "typescript": "^5.0.0"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "dependencies": {
    "clsx": "^2.1.1"
  }
}
